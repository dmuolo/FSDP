@model FSDP.DATA.EF.UserDetail

@{
    ViewBag.Title = "Manage";
}

<section class="py-5">
    <div class="container py-5">
        <div class="row text-center">
            <div class="col-lg-10 mx-auto">
                <div class="card border-0 shadow">
                    <div class="card-body p-5">
                        <h2 class="h3 mb-4 text-center">Account Overview</h2>
                        <div class="row" @*id="User-@Model.UserId"*@>
                            <div @*id="UsersTable"*@ class="col-lg-4 mb-4 mb-lg-0">
                                <dl class="dl-horizontal">
                                    <dt>
                                        Name
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)
                                    </dd>

                                    <dd>
                                        <img src="~/Content/img/UserImage/@Model.Image" alt="@Model.FirstName @Model.LastName User Image" class="img-fluid" style="height: auto; width: 12em;">
                                    </dd>
                                </dl>
                            </div>
                            <div class="col-lg-4 mb-4 mb-lg-0">
                                <dl>
                                    <dt>
                                        Instrument 1
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Instrument1)
                                    </dd>

                                    <dt>
                                        Instrument 2
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Instrument2)
                                    </dd>
                                </dl>
                            </div>
                            <div class="col-lg-4">
                                <dl>
                                    <dt>
                                        Related Skills
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.RelatedSkills)
                                    </dd>
                                    <dt>
                                        Resume on File
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.ResumeFilename)
                                    </dd>

                                </dl>
                            </div>
                        </div>
                        <p>
                            @Html.ActionLink("Edit", "Edit", new { id = Model.UserId }, new { @class = "btn btn-dark btn-sm" }) |
                            @Html.ActionLink("Delete", "Delete", new { id = Model.UserId }, new { @class = "btn btn-danger btn-sm" })
                            @*@Ajax.ActionLink("Delete", "AjaxDelete", "UserDetails", new { id = Model.UserId }, new { htmlAttributes = new { @class = "btn btn-danger" } }, new AjaxOptions {
            HttpMethod = "POST",
            Confirm = "Are you sure you want to delete this account: " + Model.FirstName + Model.LastName + "?",
            OnSuccess = "deleteConfirmed",
        })*@
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
