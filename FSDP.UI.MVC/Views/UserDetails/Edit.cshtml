@model FSDP.DATA.EF.UserDetail

@{
    ViewBag.Title = "Manage";
}

<section class="py-5">
    <div class="container py-5">
        <div class="row text-center">
            <div class="col-lg-9 mx-auto">
                <div class="card border-0 shadow">
                    <div class="card-body p-5">
                        <h2 class="h3 mb-4 text-center mx-auto">Account Overview</h2>
                        <div class="row mx-auto">
                            @using (Html.BeginForm("Edit", "UserDetails", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal mx-auto">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(Model => Model.UserId)

                                    @Html.HiddenFor(Model => Model.Image)

                                    @Html.HiddenFor(Model => Model.ResumeFilename)

                                    <div class="form-group">
                                        <h6>First Name</h6>
                                        <div class="col-md-5 mx-auto">
                                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control text-center" } })
                                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <h6>Last Name</h6>
                                        <div class="col-md-5 mx-auto">
                                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control text-center" } })
                                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-10 mx-auto">
                                            <img src="~/Content/img/UserImage/@Model.Image" alt="User Image" title="@Model.FirstName @Model.LastName Image" class="img-fluid col-md-4 text-center" />
                                            <div class="col-md-10 mx-auto">
                                                <br />
                                                <input type="file" name="UserImage" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <h6>Instrument 1</h6>
                                        <div class="col-md-5 mx-auto">
                                            @Html.EditorFor(model => model.Instrument1, new { htmlAttributes = new { @class = "form-control text-center" } })
                                            @Html.ValidationMessageFor(model => model.Instrument1, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <h6>Instrument 2</h6>
                                        <div class="col-md-5 mx-auto">
                                            @Html.EditorFor(model => model.Instrument2, new { htmlAttributes = new { @class = "form-control text-center" } })
                                            @Html.ValidationMessageFor(model => model.Instrument2, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <h6>Related Skills</h6>
                                        <div class="mx-auto">
                                            @Html.TextAreaFor(model => model.RelatedSkills, 5, 70, new { htmlAttributes = new { @class = "form-control text-center" } })
                                            @Html.ValidationMessageFor(model => model.RelatedSkills, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <h6>Resume on File</h6>
                                        <div class="col-md-10 mx-auto">
                                            @Model.ResumeFilename
                                            <div class="col-md-10 mx-auto">
                                                <br />
                                                <input type="file" name="Resume" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="mx-auto col-md-10">
                                            <input type="submit" value="Save" class="btn btn-dark" />
                                            @Html.ActionLink("Back to Details", "Details", new { id = Model.UserId }, new { @class = "btn btn-primary" })
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>