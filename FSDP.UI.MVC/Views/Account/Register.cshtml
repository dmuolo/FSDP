@model FSDP.UI.MVC.Models.RegisterViewModel
@{
    /**/

    ViewBag.Title = "Register";
}

<section class="py-5">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8 mb-5 mb-lg-0">
                <!-- About-->
                <div class="card border-0 shadow-sm mb-4 mb-lg-5 p-2 p-lg-0">
                    <div class="card-body p-lg-5">
                        <h2 class="h3 mb-4">Create a new account</h2>

                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))//new { @class = "form-horizontal", role = "form" } removed and replaced
                        {
                            @Html.AntiForgeryToken()
                            <hr />
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(m => m.FirstName, new { @class = "col-md-4 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                                </div>
                            </div>
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(m => m.LastName, new { @class = "col-md-4 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                                </div>
                            </div>
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(m => m.ResumeFilename, new { @class = "col-md-4 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.ResumeFilename, new { @class = "form-control", type = "file", name = "resume" })
                                </div>
                            </div>
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(m => m.Image, new { @class = "col-md-4 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Image, new { @class = "form-control", type = "file", name = "image" })
                                </div>
                            </div>
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(m => m.Instrument1, new { @class = "col-md-4 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Instrument1, new { @class = "form-control" })
                                </div>
                            </div>
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(m => m.Instrument2, new { @class = "col-md-4 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Instrument2, new { @class = "form-control" })
                                </div>
                            </div>
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(m => m.RelatedSkills, new { @class = "col-md-4 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.RelatedSkills, new { @class = "form-control" })
                                </div>
                            </div>
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label" })
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label" })
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" class="btn btn-primary" value="Register" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>>
